{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zecrypt Desktop",
  "version": "0.1.0",
  "identifier": "com.zecrypt.desktop",
  "build": {
    "frontendDist": "../../frontend-desktop/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm --prefix ../frontend-desktop dev",
    "beforeBuildCommand": "pnpm --prefix ../frontend-desktop build"
  },
  "app": {
    "windows": [
      {
        "title": "Zecrypt Desktop",
        "label": "main",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "closable": true,
        "maximizable": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Zecrypt",
    "category": "Productivity",
    "shortDescription": "Secure password management for desktop",
    "longDescription": "Zecrypt Desktop is a secure, offline-first password manager that keeps your credentials safe and accessible.",
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2024 Zecrypt. All rights reserved.",
    "licenseFile": "../../LICENSE.md",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    }
  }
}
