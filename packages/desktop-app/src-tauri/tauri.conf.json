{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zecrypt Desktop",
  "version": "0.1.0",
  "identifier": "com.zecrypt.desktop",
  "build": {
    "frontendDist": "../../frontend-desktop/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm --prefix ../frontend-desktop dev",
    "beforeBuildCommand": "pnpm --prefix ../frontend-desktop build"
  },
  "app": {
    "windows": [
      {
        "title": "Zecrypt Desktop",
        "label": "main",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
      "plugins": {
      "deep-link": {
        "desktop": {
          "schemes": ["zecrypt"]
        }
      }
    },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
